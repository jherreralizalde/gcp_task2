# google_client_config and kubernetes provider must be explicitly specified like the following.
data "google_client_config" "default" {}

provider "kubernetes" {
  host                   = "https://${module.gke.endpoint}"
  token                  = data.google_client_config.default.access_token
  cluster_ca_certificate = base64decode(module.gke.ca_certificate)
}

module "gke" {
  source                     = "terraform-google-modules/kubernetes-engine/google"
  project_id                 = "miprimerproyecto-333317"
  name                       = "gke-task2"
  region                     = "us-central1"
  zones                      = ["us-central1-b"]
  network                    = "gke-network"
  subnetwork                 = "gke-subnet"
  ip_range_pods              = "gke-subnet-secondary-01"
  ip_range_services          = "gke-subnet-service"
  http_load_balancing        = false
  horizontal_pod_autoscaling = true
  network_policy             = false

  node_pools = [
    {
      name                       = "default-node-pool"
      machine_type               = "n1-standard-1"
      node_locations             = "us-central1-b"
      min_count                  = 1
      max_count                  = 2
      local_ssd_count            = 0
      disk_size_gb               = 100
      disk_type                  = "pd-standard"
      image_type                 = "COS"
      auto_repair                = true
      auto_upgrade               = false
      service_account            = "account-t2@miprimerproyecto-333317.iam.gserviceaccount.com"
      preemptible                = false
      initial_node_count         = 2
      master_authorized_networks = "177.245.153.198"
    },
  ]

  node_pools_oauth_scopes = {
    all = []

    default-node-pool = [
      "https://www.googleapis.com/auth/cloud-platform",
    ]
  }

  node_pools_labels = {
    all = {}



    node-pool-1 = {
      node-pool-1 = true
    }
  }
  node_pools_tags = {
    all = []



    node-pool-1 = [
      "node-pool-1",
    ]
  }
}
